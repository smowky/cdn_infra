# kibana nginx server configuration
upstream kibana {
  keepalive 16;
  server 127.0.0.1:5601;
}

map $http_upgrade $connection_upgrade {
  default upgrade;
  '' close;
}

server {
	listen 80;
	listen [::]:80;

        {% if kibana_logging %}
	access_log /var/log/nginx/kibana.access.log;
        error_log /var/log/nginx/kibana.error.log;
        {% endif %}

	root /var/www;

	index index.html;

        server_name {{ kibana_server_name }};
        client_max_body_size 100M;
        {% if kibana_ssl %}
        include conf.d/letsencrypt.include;
        {% endif %}

	location / {
	    satisfy any;

{% if kibana_htaccess is true %}
        {% for ip in kibana_allowed_ips %}
        allow {{ ip }};
        {% endfor %}
	    deny  all;
	    auth_basic           "Administrator’s Area";
            auth_basic_user_file /etc/nginx/conf.d/kibana.htpasswd;
{% endif %}

{% if kibana_ssl %}
	    return 301 https://$host$request_uri;
	    {% else %}
            # proxy buffer increased for kibana short url function
            proxy_buffer_size          128k;
            proxy_buffers              4 256k;
            proxy_busy_buffers_size    256k;
            proxy_pass http://kibana;
{% endif %}
	}
}


{% if kibana_ssl %}
server {
	listen 443 ssl;
	listen [::]:443 ssl;

        {% if kibana_logging %}
	access_log /var/log/nginx/kibana.access.log;
        error_log /var/log/nginx/kibana.error.log;
        {% endif %}

        ssl_certificate         {{ nginx_ssl_directory }}/live/{{ kibana_server_name }}/fullchain.pem;
        ssl_certificate_key     {{ nginx_ssl_directory }}/live/{{ kibana_server_name }}/privkey.pem;
        ssl_trusted_certificate {{ nginx_ssl_directory }}/live/{{ kibana_server_name }}/chain.pem;
	include conf.d/ssl_modern.include;

	root /var/www;

	index index.html;

	server_name {{ kibana_server_name }};
        client_max_body_size 100M;

	location / {
	    satisfy any;

            {% if kibana_htaccess is true %}
            {% for ip in kibana_allowed_ips %}
            allow {{ ip }};
            {% endfor %}
	    deny  all;
	    auth_basic           "Administrator’s Area";
	    auth_basic_user_file /etc/nginx/conf.d/kibana.htpasswd;
            {% endif %}

	    # proxy buffer increased for kibana short url function
	    proxy_buffer_size          128k;
	    proxy_buffers              4 256k;
	    proxy_busy_buffers_size    256k;
            proxy_pass http://kibana;
        }

}
{% endif %}
